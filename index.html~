<audio id="myVideo" src="/nwood.mp3"
			type="audio/mpeg" preload="auto">
  Your browser does not support HTML5 video.
</audio>
<script type="text/javascript"> 
var vid = document.getElementById("myVideo");
var de,d,t1;
var minclock=13;
function playVid() 
{
	document.getElementById("instruction").innerHTML="Please turn your phone's brightness and volume to maximum";
	document.getElementById('mainbutton').style.visibility = 'hidden';
	vid.src = "/inaugaudio.mp3"
	vid.play();
	vid.pause();
	delay();
	countdown( "countdown", t1, d);		
}
function endaudio()
{
	vid.pause();
}
function swap()
{
	vid.play();
	cc();
	setTimeout(endaudio,90000);
}
function delay()
{
	var t = new Date();
	var m = t.getMinutes();
	var s = t.getSeconds();
	var ms = t.getMilliseconds();
	
	if(s!=0)
	{
		d = 60-s;
	} 
	 t1 =(minclock-m-1);
	de  = (t1*60*1000)+(d*1000)+ms;
	//document.write(de);
	vid.preload="auto";
	setTimeout(swap,de);	
}

function countdown( elementName, minutes, seconds )
{
    var element, endTime, hours, mins, msLeft, time;

    function twoDigits( n )
    {
        return (n <= 9 ? "0" + n : n);
    }

    function updateTimer()
    {
		var tu = new Date();
		var mu = tu.getMinutes();
		var t2 =(minclock-mu-1);
        msLeft = endTime - (+new Date);
        if ( msLeft < 1000 ) {
            element.innerHTML = "Begin!";
        } else {
            time = new Date(msLeft);
            mins = t2;
            element.innerHTML = (hours ? hours + ':' + twoDigits( mins ) : mins) + ':' + twoDigits( time.getSeconds() );
            setTimeout( updateTimer, time.getMilliseconds() + 500 );
        }
    }

    element = document.getElementById( elementName );
    endTime = (+new Date) + 1000* (60*minutes + seconds) + 500;
    updateTimer();
}
function c1()
{
	document.getElementById("t123").style.background="#ff6600";
	document.getElementById("t1234").innerHTML="Techela 2016";
}
function c2()
{
	document.getElementById("t123").style.background="#ff9900";
}
function c3()
{
	document.getElementById("t123").style.background="#ff9933";
}
function c4()
{
	document.getElementById("t123").style.background="#ffff66";
}
function c5()
{
	document.getElementById("t123").style.background="#ffff1a";
}
function cc()
{
	document.getElementById('instruction').style.visibility = 'hidden';
	setTimeout( c1,1000);
	setTimeout( c2,2000);
	setTimeout( c3,3000);
	setTimeout( c4,4000);
	setTimeout( c5,5000);
	setTimeout( cc,5100);
}

</script>
